generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UserAccount {
  recno       Int      @id @default(autoincrement())
  account_id  String   @unique @default(uuid())
  email       String   @unique
  password    String
  first_name  String
  last_name   String
  middle_name String?
  suffix      String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  Task        Task[]

  @@map("user_account")
}

model Task {
  recno       Int          @id @default(autoincrement())
  account_id  String
  task_name   String
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  UserAccount UserAccount? @relation(fields: [account_id], references: [account_id])

  @@map("task")
}
